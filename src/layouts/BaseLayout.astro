---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/main.scss';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>{title}</title>
		<meta name="description" content="Ime za vetar koji počinje da duva u rano proleće."/>

		<meta property="og:image" content="/razvigor-og.png">
		<meta property="og:title" content="{title }">
		<meta property="og:description" content="Ime za vetar koji počinje da duva u rano proleće. Zdravo, ja sam Igor.">
		<meta property="og:url" content="https://razvigor.com">

		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#ffc40d">
		<meta name="theme-color" content="#ffffff">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
</style>
